<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:lv="nativescript-collectionview" loaded="pageLoaded">
    <GridLayout rows="*, auto, auto">
        <lv:CollectionView id="gv" row="0" class="{{ cssClass }}" items="{{ items }}" backgroundColor="white"
                     colWidth="{{ colWidth }}" rowHeight="{{ rowHeight }}" itemTemplateSelector="templateSelector"
                     itemTap="gridViewItemTap">
            
            <lv:CollectionView.itemTemplates>
                <template key="odd">
                <GridLayout width="100%" height="100%" backgroundColor="#00ffff" >
                        <Label width="100%" height="60" backgroundColor="#00ffff" text="{{ value }}" verticalAlignment="center"/>
                        </GridLayout>
                </template>
                <template key="even">
                <GridLayout width="100%" height="100%" backgroundColor="#ff55ff">
                        <Label width="100%" height="60" backgroundColor="#ff55ff" row="1" text="{{ value }}" verticalAlignment="center"/>
                        </GridLayout>
                </template>
            </lv:CollectionView.itemTemplates>
        </lv:CollectionView>
        <Button row="1" text=" Styles" tap="changeStyles"/>
        <Button row="2" text="movies example" tap="moviesExample" />
    </GridLayout>
</Page>