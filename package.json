{
    "name": "nativescript-collectionview",
    "version": "1.0.0",
    "dependencies": {},
    "devDependencies": {
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.1.0",
        "@angular/animations": "~8.2.0",
        "@angular/common": "~8.2.0",
        "@angular/compiler": "~8.2.0",
        "@angular/compiler-cli": "~8.2.0",
        "@angular/core": "~8.2.0",
        "@angular/forms": "~8.2.0",
        "@angular/http": "~7.2.15",
        "@angular/platform-browser": "~8.2.0",
        "@angular/platform-browser-dynamic": "~8.2.0",
        "@angular/router": "~8.2.0",
        "cpy-cli": "^2.0.0",
        "husky": "^3.0.2",
        "lerna": "^3.14.1",
        "nativescript-angular": "~8.0.3",
        "prompt": "^1.0.0",
        "rimraf": "^2.6.3",
        "rxjs": "^6.5.2",
        "tns-core-modules": "rc",
        "tns-platform-declarations": "rc",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "~3.4.5",
        "vue": "^2.6.10",
        "vue-property-decorator": "^8.2.1"
    },
    "scripts": {
        "ngc": "node --max-old-space-size=8192 ./node_modules/.bin/ngc",
        "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && cp README.md plugin && tsc -skipLibCheck",
        "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map ./plugin/**/*.metadata.json plugin/node_modules plugin/package-lock.json",
        "build": "npm run tsc && npm run ngc",
        "publish": "npm run build && lerna publish",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akylas/nativescript-collectionview.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Akylas/nativescript-collectionview/issues"
    },
    "homepage": "https://github.com/Akylas/nativescript-collectionview#readme",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
