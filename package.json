{
    "name": "@nativescript-community/ui-collectionview",
    "version": "1.0.0",
    "devDependencies": {
        "@angular/animations": "^10.1.1",
        "@angular/common": "^10.1.1",
        "@angular/compiler": "~10.1.1",
        "@angular/compiler-cli": "~10.1.1",
        "@angular/core": "~10.1.1",
        "@angular/forms": "~10.1.1",
        "@angular/platform-browser": "~10.1.1",
        "@angular/platform-browser-dynamic": "~10.1.1",
        "@angular/router": "~10.1.1",
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nativescript/angular": "~10.1.0",
        "@nativescript/core": "~7.0.12",
        "@nativescript/types-android": "7.0.1",
        "@nativescript/types-ios": "7.0.1",
        "@nativescript/webpack": "3.0.3",
        "@types/node": "14.6.4",
        "@typescript-eslint/eslint-plugin": "4.1.0",
        "@typescript-eslint/parser": "4.1.0",
        "cpy-cli": "^3.1.1",
        "eslint": "7.8.1",
        "husky": "^4.3.0",
        "lerna": "^3.22.1",
        "nativescript-vue": "^2.8.1",
        "ng-packagr": "~10.1.0",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "svelte": "^3.24.1",
        "svelte-native": "0.9.3",
        "ts-patch": "^1.3.0",
        "typescript": "~3.9.7",
        "vue": "^2.6.12"
    },
    "scripts": {
        "setup": "ts-patch install",
        "build.angular": "ng-packagr -p src/angular/package.json -c src/angular/tsconfig.json",
        "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && cp README.md plugin && tsc -skipLibCheck -d",
        "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map ./plugin/**/*.metadata.json plugin/node_modules plugin/package-lock.json",
        "build": "rm -f .tsbuildinfo && npm run tsc",
        "publish": "npm run setup && npm run build && npm run build.angular && lerna publish --create-release=github",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akylas/nativescript-collectionview.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Akylas/nativescript-collectionview/issues"
    },
    "homepage": "https://github.com/Akylas/nativescript-collectionview#readme",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}